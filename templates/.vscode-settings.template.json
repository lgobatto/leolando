{
  "git.inputValidation": "always",
  "git.inputValidationLength": 72,
  "git.inputValidationSubjectLength": 50,
  "git.confirmSync": false,
  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "git.suggestSmartCommit": false,
  "git.autoStash": true,
  "git.allowNoVerifyCommit": false,

  // Configurações específicas para Conventional Commits
  "git.commitTemplate": ".gitmessage",
  "git.inputValidationSubjectFormat": "conventional",

  // Configurações do Cursor para IA
  "cursor.commitMessageTemplate": "conventional",
  "cursor.commitMessageRules": {
    "types": [
      "feat",
      "fix",
      "docs",
      "style",
      "refactor",
      "perf",
      "test",
      "build",
      "ci",
      "chore",
      "revert",
      "wip",
      "hotfix"
    ],
    "scopes": [
      "auth",
      "api",
      "ui",
      "db",
      "config",
      "docs",
      "tests",
      "ci",
      "build",
      "deploy",
      "security",
      "performance",
      "wordpress",
      "lando"
    ],
    "maxLength": 72,
    "subjectMaxLength": 50,
    "bodyMaxLength": 72,
    "footerMaxLength": 72,
    "requireScope": false,
    "requireBody": false,
    "requireFooter": false
  },

  // Configurações de formatação
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },

  // Configurações de linting
  "eslint.validate": [
    "javascript",
    "typescript",
    "php"
  ],

  // Configurações do PHP
  "php.validate.enable": true,
  "php.suggest.basic": false,

  // Configurações do workspace
  "files.exclude": {
    "**/node_modules": true,
    "**/vendor": true,
    "**/.git": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true
  },

  // Configurações de terminal
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.env.linux": {
    "LANDO_DISABLE_CACHE": "1"
  },

  // Configurações de extensões recomendadas
  "extensions.ignoreRecommendations": false,

  // Configurações de debug
  "debug.allowBreakpointsEverywhere": true,

  // Configurações de GitLens (se instalado)
  "gitlens.codeLens.enabled": true,
  "gitlens.codeLens.recentChange.enabled": true,
  "gitlens.codeLens.authors.enabled": true,
  "gitlens.hovers.enabled": true,
  "gitlens.hovers.detailsMarkdownFormat": "conventional"
}